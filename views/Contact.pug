extends layout

block content

  link(rel="stylesheet", href="/assests/css/contact.css")
  .contact-container
    h2 Contact Us
    p If you have any questions, feel free to reach out to us using the form below:
    
    form(action="mailto:221fa04721@gmail.com" method="post" id="contact-form")
      .form-group
        label(for="name") Your Name
        input#name(type="text" name="name" required=true)
        
      .form-group
        label(for="email") Your Email
        input#email(type="email" name="email" required=true)

      .form-group
        label(for="message") Your Message
        textarea#message(name="message" rows="5" required=true)

      .form-group
        button(type="submit" class="submit-btn") Send Message
